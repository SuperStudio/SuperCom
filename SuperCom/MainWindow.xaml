                                        Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" />
                                </Viewbox>
                            </Border>
                            <Border
                                Grid.Column="2"
                                MouseUp="ShowContextMenu"
                                Style="{StaticResource RoundHoverBorder}"
                                ToolTip="排序">
                                <Border.ContextMenu>
                                    <ContextMenu HorizontalOffset="-50">

                                        <MenuItem
                                            Click="SortSidePorts"
                                            Header="按添加顺序"
                                            Tag="AddTime" />
                                        <MenuItem
                                            Click="SortSidePorts"
                                            Header="按串口名"
                                            Tag="PortName" />
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Viewbox Width="auto" Height="15">
                                    <Path
